{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "cleanup_before": {
      "type": "boolean",
      "description": "If true, the module will erase all module's previous changes before applying anything"
    },
    "disable_reboot_request": {
      "type": "boolean",
      "description": "If true, LCM reboot request file creation will be skipped."
    },
    "limits_filename": {
      "type": "string",
      "description": "Customize file name for limits rules in /etc/security/limits.d/ directory configured by the module"
    },
    "sysctl_filename": {
      "type": "string",
      "description": "Customize file name for sysctl parameters stored in /etc/sysctl.d/ directory configured by the module"
    },
    "system": {
      "$ref": "#/definitions/section"
    },
    "users": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "$ref": "#/definitions/section"
        }
      }
    },
    "additionalProperties": false
  },
  "additionalProperties": false,
  "definitions": {
    "section": {
      "type": "object",
      "properties": {
        "core": {
          "$ref": "#/definitions/baseLimit"
        },
        "data": {
          "$ref": "#/definitions/baseLimit"
        },
        "fsize": {
          "$ref": "#/definitions/baseLimit"
        },
        "memlock": {
          "$ref": "#/definitions/baseLimit"
        },
        "nofile": {
          "type": "integer",
          "minimum": -1,
          "maximum": 2147483584
        },
        "rss": {
          "$ref": "#/definitions/baseLimit"
        },
        "stack": {
          "$ref": "#/definitions/baseLimit"
        },
        "cpu": {
          "$ref": "#/definitions/baseLimit"
        },
        "nproc": {
          "type": "integer",
          "minimum": -1,
          "maximum": 4194304
        },
        "as": {
          "$ref": "#/definitions/baseLimit"
        },
        "maxlogins": {
          "$ref": "#/definitions/baseLimit"
        },
        "maxsyslogins": {
          "$ref": "#/definitions/baseLimit"
        },
        "priority": {
          "$ref": "#/definitions/priorityLimit"
        },
        "locks": {
          "$ref": "#/definitions/baseLimit"
        },
        "sigpending": {
          "$ref": "#/definitions/baseLimit"
        },
        "msgqueue": {
          "$ref": "#/definitions/baseLimit"
        },
        "nice": {
          "$ref": "#/definitions/priorityLimit"
        },
        "rtprio": {
          "type": "integer",
          "minimum": -1,
          "maximum": 99
        }
      },
      "additionalProperties": false
    },
    "baseLimit": {
      "type": "integer",
      "minimum": -1
    },
    "priorityLimit": {
      "type": "integer",
      "minimum": -20,
      "maximum": 19
    }
  }
}